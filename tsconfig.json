{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "types": [
      "react",
      "jest"
    ],
    "paths": {
      "~*": [
        "./*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
